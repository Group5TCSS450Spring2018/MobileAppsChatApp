<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme_WashedOut" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/washedOut_Primary</item>
        <item name="colorPrimaryDark">@color/washedOut_PrimaryDark</item>
        <item name="colorAccent">@color/washedOut_ColorAccent</item>
    </style>

    <style name="AppTheme_Coral" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/coral_Primary</item>
        <item name="colorPrimaryDark">@color/coral_PrimaryDark</item>
        <item name="colorAccent">@color/coral_ColorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
